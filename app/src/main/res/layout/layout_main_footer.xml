<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/space_48"
    android:background="#FBFBFC"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/foot_bar_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="@dimen/space_42"
                    android:layout_height="@dimen/space_42"
                    android:layout_marginBottom="@dimen/space_6"
                    android:layout_marginTop="@dimen/space_6"
                    android:gravity="center"
                    android:text="首页" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/foot_bar_fund"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="@dimen/space_42"
                    android:layout_height="@dimen/space_42"
                    android:layout_marginBottom="@dimen/space_6"
                    android:layout_marginTop="@dimen/space_6"
                    android:gravity="center"
                    android:scaleType="fitCenter"
                    android:text="列表" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_footbar_phegda"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="@dimen/space_42"
                    android:layout_height="@dimen/space_42"
                    android:layout_marginBottom="@dimen/space_6"
                    android:layout_marginTop="@dimen/space_6"
                    android:gravity="center"
                    android:scaleType="fitCenter"
                    android:text="天玑智投" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_footbar_discover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="@dimen/space_42"
                    android:layout_height="@dimen/space_42"
                    android:layout_marginBottom="@dimen/space_6"
                    android:layout_marginTop="@dimen/space_6"
                    android:gravity="center"
                    android:scaleType="fitCenter"
                    android:text="财富圈" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_footbar_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="@dimen/space_42"
                    android:layout_height="@dimen/space_42"
                    android:layout_marginBottom="@dimen/space_6"
                    android:layout_marginTop="@dimen/space_6"
                    android:gravity="center"
                    android:scaleType="fitCenter"
                    android:text="我的" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>