<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowBackground">@color/white</item>
        <!-- 设置状态栏顶部的颜色 -->
        <item name="colorPrimaryDark">@color/white</item>
        <!-- 设置内容颜色 -->
        <item name="colorAccent">@color/white</item>

        <item name="android:windowDisablePreview">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/MyWindowAnimTheme</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--ActionBar 不带阴影的主题样式-->
    <style name="ActionBarStyleWithoutShadow">
        <item name="background">@color/white</item>
    </style>

    <!-- activity into animation -->
    <style name="MyWindowAnimTheme">
        <item name="android:activityOpenEnterAnimation">@anim/right_to_left_in</item>
        <item name="android:activityOpenExitAnimation">@anim/left_to_right_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/left_to_right_in</item>
        <item name="android:activityCloseExitAnimation">@anim/right_to_left_out</item>
    </style>

</resources>
